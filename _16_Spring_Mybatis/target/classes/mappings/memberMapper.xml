<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="memberDaoMap">
    <insert id="join" parameterType="member">
        INSERT INTO MEMBER(USERNAME, PASSWORD, EMAIL, NICKNAME, TEL)
        VALUES (#{username}, #{password}, #{email}, #{nickname}, #{tel})
    </insert>

    <select id="getMembers" resultType="member">
        SELECT ID, USERNAME, PASSWORD, NICKNAME, EMAIL, TEL
        FROM MEMBER
    </select>

    <select id="getOneByUsername" parameterType="string" resultType="member">
        SELECT ID, USERNAME, PASSWORD, NICKNAME, EMAIL, TEL
        FROM MEMBER
        WHERE USERNAME = #{username}
    </select>

</mapper>


